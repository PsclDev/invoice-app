{
  "name": "invoice-app",
  "version": "1.0.0",
  "description": "small and simple invoice app for my dads business",
  "main": "index.js",
  "repository": "git@github.com:PsclDev/invoice-app.git",
  "author": "PsclDev <me@pscl.dev>",
  "license": "MIT",
  "private": true,
  "scripts": {
    "dev": "concurrently -n frontend,backend \"yarn dev:frontend\" \"yarn:dev:backend\"",
    "dev:frontend": "cd frontend && yarn dev",
    "dev:backend": "cd backend && yarn start:dev",
    "ia": "npx concurrently -n frontend,backend \"yarn\" \"cd frontend && yarn\" \"cd backend && yarn\"",
    "i:frontend": "cd frontend/ && yarn",
    "i:backend": "cd backend/ && yarn",
    "lint": "concurrently -n frontend,backend \"yarn lint:frontend\" \"yarn lint:backend\"",
    "lint:frontend": "cd frontend && yarn lint",
    "lint:backend": "cd backend && yarn lint",
    "prepare": "husky install",
    "precommit": "npx concurrently -n frontend,backend \"yarn\" \"cd frontend && yarn precommit\" \"cd backend && yarn precommit\"",
    "precommit:frontend": "cd backend/ && yarn precommit",
    "precommit:backend": "cd backend/ && yarn precommit",
    "test:frontend": "cd frontend && yarn jest",
    "test:backend": "cd backend && yarn jest",
    "test:backend-watch": "cd backend && yarn jest --watch",
    "test:backend-cov": "cd backend && yarn jest --coverage"
  },
  "devDependencies": {
    "@commitlint/cli": "^16.1.0",
    "@commitlint/config-conventional": "^16.0.0",
    "concurrently": "^7.0.0",
    "husky": "^7.0.4",
    "lint-staged": "^12.4.1"
  }
}