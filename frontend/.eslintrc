{
  "parser": "vue-eslint-parser",
  "parserOptions": {
    "parser": "@typescript-eslint/parser"
  },
  "extends": [
    "@nuxtjs/eslint-config-typescript",
    "plugin:prettier/recommended",
    "plugin:tailwindcss/recommended"
  ],
  "plugins": ["simple-import-sort"],
  "rules": {
    "vue/multi-word-component-names": "off",
    "simple-import-sort/imports": "error",
    "simple-import-sort/exports": "error",
    "tailwindcss/no-custom-classname": [
      "error",
      {
        "config": {
          "theme": {
            "extend": {
              "colors": {
                "white": "#fafafa",
                "black": "#050505",
                "spring-green": {
                  "50": "#eefff5",
                  "100": "#d7ffe9",
                  "200": "#b2ffd5",
                  "300": "#76ffb5",
                  "400": "#33f58e",
                  "500": "#09de6d",
                  "600": "#00c05b",
                  "700": "#049148",
                  "800": "#0a713c",
                  "900": "#0a5d34",
                  "950": "#00341a"
                },
                "cannon-pink": {
                  "50": "#f9f6f8",
                  "100": "#f5eef2",
                  "200": "#ecdee7",
                  "300": "#dec3d3",
                  "400": "#c99db6",
                  "500": "#b67e9c",
                  "600": "#9f6380",
                  "700": "#8a516b",
                  "800": "#704458",
                  "900": "#5f3c4b",
                  "950": "#381f2a"
                }
              }
            }
          }
        }
      }
    ]
  }
}
